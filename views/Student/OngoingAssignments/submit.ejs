				</nav>
				
		<script src="../../js/classie.js"></script>
		<script src="../../js/clipboard.min.js"></script>
		<div class="container-fluid">
                <section class="col-md-3">
                    <form class="form-container" method='post'>
						<% for(var i = 1; i <= assi.questions.length; i++) { %>
							<div class="form-group">
								<label>Q. <%= i %> ) <%= assi.questions[i-1] %></label>
								<section class="row">
									<section class="col-6" style="padding: 1px; left: 14px;">
										<textarea name='answers' cols=160 rows=10></textarea>
									</section>
								</section>
							</div>
						<% } %>    
						<div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-primary btn-block" onclick="return verify()">Submit</button>
                        </div>
                	</form>
                </section>
          </div>
		
	</body>
